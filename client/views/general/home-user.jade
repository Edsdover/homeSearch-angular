h1 DashBoard
.row
  .col-xs-4.col-xs-offset-1
    form(name='userForm', novalidate)
      .form-group
        h2 Profile: {{user.name}}
        img.img-responsive.img-thumbnail#photo(ng-src='{{user.photo}}')
        img.img-responsive.img-thumbnail#avatar(ng-src='{{user.avatar}}')
        h3 {{user.email}}
        h3 {{user.phone}}
  .col-xs-7
    form(name='listingForm', novalidate)
      .form-group
        h2 {{user.name}}'s Active Listings:
      .form-group
        #cardContainer.col-xs-6(ng-repeat='listing in listings')
          img.img-responsive.img-thumbnail#photo(ng-src='{{listing.picture}}')
          #cardInfo City: {{listing.city}}
          #cardInfo Address: {{listing.address}}
          #cardInfo Price: {{listing.price}}
          #cardInfo Square Feet: {{listing.sqft}}
          #cardInfo BedRooms: {{listing.bedrooms}}
          #cardInfo BathRooms: {{listing.bathrooms}}
