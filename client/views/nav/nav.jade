nav.navbar.navbar-default.navbar-inverse(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Home Listings
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left
        li: a(ui-sref='listings.show'): i.fa.fa-home: i.fa.fa-list &nbsp; Home Listings
      ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
        li: a(ui-sref='home'): i.fa.fa-cog &nbsp; DashBoard
        li: a(ui-sref='profile'): i.fa.fa-reddit &nbsp; Profile
        li: button.btn-md.btn-primary#logout(ng-click='logout()'): i.fa.fa-sign-out &nbsp; Logout of: {{displayName}}
      ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
        li: a(ui-sref='register'): i.fa-user-plus &nbsp; Register
        li: a(ui-sref='login'): i.fa-key &nbsp; Login
